<% @title = @team.title %>

<%= render partial: "teams/form" %>

<div class="well">
  <%= link_to("Update Members", refresh_members_team_path(@team), :class => "btn btn-primary pull-right") %>
  <h3 class="has-left"><%= @team.title %> members</h3>

  <ul class="has-above-1 has-below-1">
    <% @team.users.each do |u|%>
      <li>
        <%= u.name %> (<%= u.email%>)
      </li>
    <% end %>
  </ul>   
</div>