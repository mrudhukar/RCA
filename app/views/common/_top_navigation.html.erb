<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to("RCA Made Easy", root_path, :class => "brand")%>

      <% if current_user %>
        <ul class="nav">
          <li class="<%= 'active' if @tab.nil? || @tab == TabConstants::HOME %>">
            <%= link_to("Home", root_path) %>
          </li>

          <li class="<%= 'active' if @tab == TabConstants::ROOT_CAUSES %>">
            <%= link_to("Common Mistakes", root_causes_path) %>
          </li>
          
          <li class="dropdown">
            <%= link_to("Archived", "#", :class => "dropdown-toggle", :data => {:toggle => "dropdown"}) %>
            <ul class="dropdown-menu">
              <li><%= link_to "All Bugs", "#" %></li>
              <li class="divider"></li>
              <li><%= link_to "All Follow-ups", "#" %></li>
            </ul>
          </li>

          <li class="<%= 'active' if @tab == TabConstants::MEETINGS %>">
            <%= link_to("RCA Sessions", "") %>
          </li>

          <form class="navbar-search pull-left">
            <input type="text" class="search-query" placeholder="Search">
          </form>
        </ul>
      <% end %>

      <ul class="nav pull-right">
        <% if current_user %>
          <li class="dropdown">
            <%= link_to((current_user.name + ' <b class="caret"></b>').html_safe, "#", :class => "dropdown-toggle", :data => {:toggle => "dropdown"}) %>
            <ul class="dropdown-menu">
              <li><%= link_to "Account Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Logout", logout_path() %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to("Sign Up", new_user_path()) %></li>
          <li class="divider-vertical"></li>
          <li><%= link_to("Login", new_user_session_path()) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>