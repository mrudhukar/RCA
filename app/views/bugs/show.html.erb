<div class="row-fluid">
  <div class="well">
    <div>
      <% if @bug.ignored? %>
        <%= link_to("Include", team_bug_path(current_team, @bug, :ignore => false),:method => :put, :class => "btn btn-primary pull-right")%>
      <% else %>
        <%= link_to("Ignore", team_bug_path(current_team, @bug, :ignore => true),:method => :put, :class => "btn pull-right")%>
      <% end %>
      <%= link_to("View in PT", "https://www.pivotaltracker.com/story/show/#{@bug.pt_id}", :target => "_blank",:method => :put, :class => "btn btn-primary pull-right has-right")%>
      <h3><%= @bug.title %></h3>
    </div>
    <div class ="dim">
      <%= auto_link(@bug.description) %>
    </div>
  </div>

  <div class="well">
    <div>
      <%= link_to("Add/Edit", "", :class => "btn btn-primary pull-right") %>
      <h4>Root Causes</h4>
    </div>
  </div>
</div>